<table class='table table-hover table-inverse'>
    <div class='row'>
      <div class='mx-auto'>
        <p>
<%= render 'searchs/search',range: @range  %>
        </p>
      </div>
    </div>
<tbody>
  <tr>

<% if @range == "User" %>
<h4>Users search for    "<%= params[:word] %>"</h4>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
  <td><%= link_to user.name, user_path(user) %></td>
  <% end %>
  </tr>

<% else %>
<h4>Books search for    "<%= params[:word] %>"</h4>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tr>
  <%  @books.each do |book| %>
<td><%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
   <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
</tr>
  <% end %>
<% end %>
  </tbody>
</table>