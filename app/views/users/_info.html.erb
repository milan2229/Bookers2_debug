<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <% user ||= current_user %>
    <th>follows</th>
    <th><%= link_to user.follower.count, user_users_followed_path(user.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followed.count, user_users_follower_path(user.id) %></th>
  </tr>
</table>
  <tr>
<td>
  <% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", unfollow_path(user.id), method: :delete, class: 'btn btn-primary'%>
        <% else %>
    <%= link_to "フォローする", follow_path(user.id), method: :POST, class: 'btn btn-success' %>
<% end %>
<% end %>
</td>
  </tr>
  <br>
  <br>


<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>